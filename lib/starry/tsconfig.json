{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "allowJs": true,
        "sourceMap": false,
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": false,
        "outDir": "compiled/",
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2015",
            "es6",
            "es7",
            "dom"
        ]
    },
    "exclude": [
        "node_modules",
        "build",
        "webpack.config.js"
    ]
  }
  